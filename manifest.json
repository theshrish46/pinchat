{
  "manifest_version": 3,
  "name": "Pinchat — Save & Jump to Any Chat Instantly",
  "version": "1.0.0",
  "description": "Pinchat lets you pin any chat or on-page element and instantly jump back to it — no more endless scrolling.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pinchat"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "author": "Pinchat Team",
  "homepage_url": "https://yourprojectsite.com",
  "minimum_chrome_version": "114",
  "offline_enabled": true
}
